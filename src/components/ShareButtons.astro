---
interface Props {
  title: string;
  url: string;
}

const { title, url } = Astro.props;

// URLエンコード
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);

// 各SNSのシェアURL
const shareUrls = {
  twitter: `https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`,
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`,
  hatena: `https://b.hatena.ne.jp/entry/${url}`,
  pocket: `https://getpocket.com/edit?url=${encodedUrl}`,
};
---

<div class="share-buttons">
  <p class="share-label">この記事をシェア</p>
  <div class="share-buttons-container">
    <a href={shareUrls.twitter} target="_blank" rel="noopener noreferrer" class="share-button twitter" aria-label="Xでシェア">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
      </svg>
      <span>X</span>
    </a>
    <a href={shareUrls.facebook} target="_blank" rel="noopener noreferrer" class="share-button facebook" aria-label="Facebookでシェア">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
      </svg>
      <span>Facebook</span>
    </a>
    <a href={shareUrls.hatena} target="_blank" rel="noopener noreferrer" class="share-button hatena" aria-label="はてなブックマークでシェア">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M20 3H4c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9.6 14.4c-.8.3-1.6.4-2.5.4-1.8 0-3.2-.5-4.1-1.4v-1.3c.8.8 2 1.3 3.4 1.3.6 0 1.1-.1 1.5-.3.4-.2.6-.5.6-.9 0-.3-.2-.6-.5-.8-.3-.2-.9-.4-1.7-.6-1-.2-1.7-.5-2.3-.9-.5-.4-.8-1.1-.8-1.9 0-.9.3-1.6 1-2.1.7-.5 1.6-.8 2.7-.8.9 0 1.7.1 2.4.4v1.3c-.7-.4-1.5-.7-2.4-.7-.5 0-.9.1-1.2.3-.3.2-.5.5-.5.8 0 .3.2.6.5.7.3.2.9.4 1.6.5 1 .2 1.8.5 2.4.9.6.4.9 1.1.9 2 0 .9-.3 1.6-1 2.1zm7.9 1.2c-.4.4-.9.6-1.5.6s-1.1-.2-1.5-.6c-.4-.4-.6-.9-.6-1.5s.2-1.1.6-1.5c.4-.4.9-.6 1.5-.6s1.1.2 1.5.6c.4.4.6.9.6 1.5s-.2 1.1-.6 1.5zm0-5.7h-2.1V4.1h2.1v5.8z"/>
      </svg>
      <span>はてブ</span>
    </a>
    <a href={shareUrls.pocket} target="_blank" rel="noopener noreferrer" class="share-button pocket" aria-label="Pocketに保存">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18.813 10.259l-5.646 5.419a1.319 1.319 0 0 1-1.827 0l-5.646-5.419a1.319 1.319 0 0 1 0-1.827 1.319 1.319 0 0 1 1.827 0l4.733 4.537 4.733-4.537a1.319 1.319 0 0 1 1.827 0 1.319 1.319 0 0 1 0 1.827zM24 4.5v7.5c0 6.627-5.373 12-12 12S0 18.627 0 12V4.5A2.5 2.5 0 0 1 2.5 2h19A2.5 2.5 0 0 1 24 4.5z"/>
      </svg>
      <span>Pocket</span>
    </a>
  </div>
</div>

<style>
  .share-buttons {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e0e0e0;
  }

  .share-label {
    font-size: 0.9rem;
    font-weight: 600;
    color: #666;
    margin-bottom: 1rem;
  }

  .share-buttons-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .share-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    border-radius: 6px;
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    transition: opacity 0.2s, transform 0.2s;
    color: white;
  }

  .share-button:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .share-button svg {
    width: 18px;
    height: 18px;
  }

  .share-button.twitter {
    background-color: #000;
  }

  .share-button.facebook {
    background-color: #1877f2;
  }

  .share-button.hatena {
    background-color: #00a4de;
  }

  .share-button.pocket {
    background-color: #ef4056;
  }

  @media (max-width: 480px) {
    .share-buttons-container {
      gap: 0.5rem;
    }

    .share-button {
      padding: 0.5rem 0.875rem;
      font-size: 0.8rem;
    }

    .share-button svg {
      width: 16px;
      height: 16px;
    }
  }
</style>
