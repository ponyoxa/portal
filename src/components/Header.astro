import Search from './Search.astro';
---

<header class="site-header">
  <div class="container header-container">
    <h1 class="site-title">
      <a href="/">
        <img src="/icon_favicon.png" alt="ponyoxa icon" class="site-icon" />
        <span>ponyoxa portal</span>
      </a>
    </h1>
    <Search />
    <nav class="header-nav">
      <a href="https://x.com/ponyoxa" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="X (Twitter)">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
        </svg>
      </a>
      <a href="https://github.com/ponyoxa" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="GitHub">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
