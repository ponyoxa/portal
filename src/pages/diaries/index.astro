---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Pagination from '../../components/Pagination.astro';
import { formatDateJST, compareDatesJST } from '../../utils/date';

const PAGE_SIZE = 20;

const diaries = await getCollection('diaries');
const sortedDiaries = diaries.sort((a, b) => {
  return -compareDatesJST(a.data.createdAt, b.data.createdAt);
});

const totalPages = Math.ceil(sortedDiaries.length / PAGE_SIZE);
const currentPage = 1;
const paginatedDiaries = sortedDiaries.slice(0, PAGE_SIZE);
---

<BaseLayout title="Diaries - ponyoxa portal" pagefindIgnore={true}>
  <div>
    <h1>Diaries</h1>
    {paginatedDiaries.length > 0 ? (
      <>
        <div class="article-list">
          {paginatedDiaries.map(post => (
            <div class="article-card">
              <small>{formatDateJST(post.data.createdAt)}</small>
              <a href={`/diaries/${post.slug}`}>
                <p>{post.data.title ?? post.slug}</p>
              </a>
            </div>
          ))}
        </div>
        <Pagination currentPage={currentPage} totalPages={totalPages} baseUrl="/diaries" />
      </>
    ) : (
      <div>記事がありません</div>
    )}
    <nav style="margin-top: 3rem; text-align: center;">
      <a class="nav-link" href="/">← ホーム</a>
    </nav>
  </div>
</BaseLayout>
