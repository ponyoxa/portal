---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Pagination from '../../../components/Pagination.astro';

export async function getStaticPaths() {
  const PAGE_SIZE = 20;
  const blogs = await getCollection('blog', ({ data }) => {
    const now = new Date();
    const jst = new Date(now.getTime() + 9 * 60 * 60 * 1000);
    return data.createdAt <= jst;
  });
  const sortedBlogs = blogs.sort((a, b) => {
    const dateA = a.data.createdAt ? new Date(a.data.createdAt).getTime() : 0;
    const dateB = b.data.createdAt ? new Date(b.data.createdAt).getTime() : 0;
    return dateB - dateA;
  });

  const totalPages = Math.ceil(sortedBlogs.length / PAGE_SIZE);

  return Array.from({ length: totalPages }, (_, i) => i + 1)
    .filter(page => page > 1) // 1ページ目は /blog で表示するため除外
    .map(page => {
      const start = (page - 1) * PAGE_SIZE;
      const end = start + PAGE_SIZE;
      return {
        params: { page: page.toString() },
        props: {
          blogs: sortedBlogs.slice(start, end),
          currentPage: page,
          totalPages,
        },
      };
    });
}

const { blogs, currentPage, totalPages } = Astro.props;

function formatDate(date: Date | undefined): string {
  if (!date) return '';
  return date.toISOString().split('T')[0];
}
---

<BaseLayout title={`Blog - Page ${currentPage} - ponyoxa portal`}>
  <div>
    <h1>Blog</h1>
    <div style="text-align: center; margin-bottom: 1.5rem;">
      <a href="/blog/tags" class="nav-link" style="margin: 0;">タグ一覧を見る</a>
    </div>
    {blogs.length > 0 ? (
      <>
        <div class="blog-list">
          {blogs.map(post => (
            <div class="blog-card">
              <small>{formatDate(post.data.createdAt)}</small>
              <a href={`/blog/${post.slug}`}>
                <p>{post.data.title ?? "(no title)"}</p>
              </a>
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="tags">
                  {post.data.tags.map(tag => (
                    <a href={`/blog/tags/${tag}`} class="tag">{tag}</a>
                  ))}
                </div>
              )}
            </div>
          ))}
        </div>
        <Pagination currentPage={currentPage} totalPages={totalPages} baseUrl="/blog" />
      </>
    ) : (
      <div>記事がありません</div>
    )}
    <nav style="margin-top: 3rem; text-align: center;">
      <a class="nav-link" href="/">← ホーム</a>
    </nav>
  </div>
</BaseLayout>

<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .tag {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background-color: #f5f5f5;
    border-radius: 12px;
    text-decoration: none;
    color: #333;
    font-size: 0.8rem;
    transition: background-color 0.2s;
  }

  .tag:hover {
    background-color: #e0e0e0;
  }
</style>
