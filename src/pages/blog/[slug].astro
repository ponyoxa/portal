---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ShareButtons from '../../components/ShareButtons.astro';
import { nowJST, formatDateJST, toISOStringJST, toJST } from '../../utils/date';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog', ({ data }) => {
    const now = nowJST();
    const createdAt = toJST(data.createdAt);
    return createdAt <= now;
  });
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const title = entry.data.title || 'ponyoxa portal';
const description = entry.data.description || '';
const currentUrl = new URL(Astro.url.pathname, Astro.site || 'https://ponyoxa.com').toString();
---

<BaseLayout title={title} description={description}>
  <article>
    <h1 data-pagefind-meta="title">{entry.data.title}</h1>
    <div class="post-meta">
      <time datetime={toISOStringJST(entry.data.createdAt)}>
        作成日: {formatDateJST(entry.data.createdAt)}
      </time>
      {entry.data.updatedAt &&
       entry.data.updatedAt.getTime() !== entry.data.createdAt.getTime() && (
        <time datetime={toISOStringJST(entry.data.updatedAt)}>
          更新日: {formatDateJST(entry.data.updatedAt)}
        </time>
      )}
    </div>
    {entry.data.tags && entry.data.tags.length > 0 && (
      <div class="post-tags">
        {entry.data.tags.map(tag => (
          <a href={`/blog/tags/${tag}`} class="tag">{tag}</a>
        ))}
      </div>
    )}
    <Content />
    <ShareButtons title={title} url={currentUrl} />
    <nav style="margin-top: 2rem; text-align: center;">
      <a class="nav-link" href="/blog">← 一覧</a>
    </nav>
  </article>
</BaseLayout>

<style>
  .post-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin: 1rem 0;
    color: #666;
    font-size: 0.9rem;
  }

  .post-meta time {
    display: block;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin: 1rem 0 2rem 0;
  }

  .tag {
    display: inline-block;
    padding: 0.35rem 0.875rem;
    background-color: #f5f5f5;
    border-radius: 15px;
    text-decoration: none;
    color: #333;
    font-size: 0.85rem;
    transition: background-color 0.2s, transform 0.2s;
  }

  .tag:hover {
    background-color: #e0e0e0;
    transform: translateY(-1px);
  }
</style>
