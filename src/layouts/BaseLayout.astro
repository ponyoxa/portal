---
import Header from '../components/Header.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  pagefindIgnore?: boolean;
}

const { title = 'ponyoxa portal', description = 'ponyoxaのポータルサイト', image, pagefindIgnore = false } = Astro.props;

// R2のOGP画像URLを生成
function getOGPImageUrl(pathname: string): string {
  const r2PublicUrl = import.meta.env.PUBLIC_R2_URL || 'https://pub-xxx.r2.dev';
  const normalized = pathname
    .replace(/^\//, '')
    .replace(/\/$/, '')
    .replace(/\//g, '-');
  const key = `ogp/${normalized || 'index'}.png`;
  return `${r2PublicUrl}/${key}`;
}

// 画像URL: propsで指定されていればそれを使用、なければR2から自動生成
const ogpImageUrl = image?.startsWith('http')
  ? image
  : image?.startsWith('/')
  ? new URL(image, Astro.site || 'https://ponyoxa.com').toString()
  : getOGPImageUrl(Astro.url.pathname);
---

<!DOCTYPE html>
<html lang="ja" prefix="og: http://ogp.me/ns#">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="icon" type="image/png" href="/favicon.png" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=BIZ+UDPGothic&display=swap" />
  <title>{title}</title>
  <meta name="description" content={description} />

  <!-- Open Graph / Facebook / Slack -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={Astro.url} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogpImageUrl} />
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="630" />
  <meta property="og:image:alt" content={title} />
  <meta property="og:site_name" content="ponyoxa portal" />
  <meta property="og:locale" content="ja_JP" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogpImageUrl} />
  <meta name="twitter:image:alt" content={title} />

</head>
<body>
  <Header />
  <div class="markdown-body font-class" data-pagefind-body={pagefindIgnore ? undefined : true} data-pagefind-ignore={pagefindIgnore ? true : undefined}>
    <slot />
  </div>
  <footer><small>&copy; 2025 ponyoxa</small></footer>

  <script>
    // 外部リンクを新しいタブで開く
    document.addEventListener('DOMContentLoaded', () => {
      const links = document.querySelectorAll('a[href]');
      links.forEach(link => {
        const href = link.getAttribute('href');
        if (href && (href.startsWith('http://') || href.startsWith('https://'))) {
          const currentDomain = window.location.hostname;
          try {
            const linkDomain = new URL(href).hostname;
            if (linkDomain !== currentDomain) {
              link.setAttribute('target', '_blank');
              link.setAttribute('rel', 'noopener noreferrer');
            }
          } catch (e) {
            // URLパースエラーの場合は無視
          }
        }
      });
    });
  </script>
</body>
</html>

<style is:global>
  @import 'github-markdown-css';

  body {
    margin: 0;
    padding: 0;
    color: #333333;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .markdown-body {
    flex: 1;
    max-width: 980px;
    margin: 0 auto;
    padding: 0 16px;
    width: 100%;
    box-sizing: border-box;
  }

  /* マークダウン内の画像 */
  .markdown-body img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 1rem 0;
    border-radius: 4px;
  }

  /* マークダウン見出しに # 記号を表示 */
  .markdown-body h1::before {
    content: "# ";
    color: #666;
    margin-right: 0.5rem;
  }

  .markdown-body h2::before {
    content: "## ";
    color: #666;
    margin-right: 0.5rem;
  }

  .markdown-body h3::before {
    content: "### ";
    color: #666;
    margin-right: 0.5rem;
  }

  .markdown-body h4::before {
    content: "#### ";
    color: #666;
    margin-right: 0.5rem;
  }

  .markdown-body h5::before {
    content: "##### ";
    color: #666;
    margin-right: 0.5rem;
  }

  .markdown-body h6::before {
    content: "###### ";
    color: #666;
    margin-right: 0.5rem;
  }

  footer {
    text-align: center;
    padding: 2rem 0;
    border-top: 1px solid #e0e0e0;
    margin-top: 4rem;
  }

  /* ページタイトル */
  h1 {
    margin-top: 2rem;
    margin-bottom: 1.5rem;
    font-size: 2rem;
  }

  /* パラグラフ */
  p {
    line-height: 1.8;
  }

  /* ナビゲーションリンク・ボタン */
  .link-to-top,
  .nav-link {
    display: inline-block;
    margin-top: 2rem;
    padding: 0.5rem 1rem;
    color: #333;
    text-decoration: none;
    border: 1px solid #ddd;
    border-radius: 4px;
    transition: background-color 0.2s, border-color 0.2s;
    font-size: 0.9rem;
  }

  .link-to-top:hover,
  .nav-link:hover {
    background-color: #f5f5f5;
    border-color: #999;
  }

  /* 静的コンテンツページ */
  .content-page {
    max-width: 980px;
    margin: 0 auto;
  }

  .content-page h1 {
    margin-top: 2rem;
    margin-bottom: 1.5rem;
  }

  .content-page p {
    margin: 1rem 0;
    line-height: 1.8;
  }

  .content-page a {
    color: #0066cc;
    text-decoration: underline;
    transition: color 0.2s;
  }

  .content-page a:hover {
    color: #004499;
  }

  /* ブログ・日記一覧 */
  .blog-list,
  .article-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .blog-card,
  .article-card {
    border-bottom: 1px solid #e0e0e0;
    padding-bottom: 1rem;
  }

  .blog-card:last-child,
  .article-card:last-child {
    border-bottom: none;
  }

  .blog-card small,
  .article-card small {
    color: #666;
    font-size: 0.875rem;
  }

  .blog-card a,
  .article-card a {
    color: #333;
    text-decoration: none;
    transition: color 0.2s;
  }

  .blog-card a:hover,
  .article-card a:hover {
    color: #0066cc;
  }

  .blog-card p,
  .article-card p {
    margin: 0.5rem 0 0 0;
    font-size: 1.1rem;
    font-weight: 500;
  }

  /* レスポンシブ対応 */
  @media (max-width: 768px) {
    .markdown-body {
      padding: 0 12px;
    }

    h1 {
      font-size: 1.75rem;
      margin-top: 1.5rem;
    }

    footer {
      margin-top: 3rem;
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 1.5rem;
      margin-top: 1rem;
    }

    .blog-card p,
    .article-card p {
      font-size: 1rem;
    }

    footer {
      margin-top: 2rem;
      padding: 1.5rem 0;
    }
  }

  /* リンクカードのスタイル */
  .link-card-wrapper {
    margin: 1.5rem 0;
  }

  .link-card {
    display: block;
    text-decoration: none;
    color: inherit;
    border: 1px solid #e0e0e0;
    border-radius: 6px;
    overflow: hidden;
    transition: all 0.2s ease;
    background-color: #fff;
    max-width: 600px;
  }

  .link-card:hover {
    border-color: #999;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  .link-card-content {
    display: flex;
    align-items: stretch;
    min-height: 100px;
  }

  .link-card-text {
    flex: 1;
    padding: 12px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-width: 0;
  }

  .link-card-title {
    font-size: 0.9rem;
    font-weight: 600;
    line-height: 1.4;
    margin-bottom: 0.4rem;
    color: #333;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .link-card-description {
    font-size: 0.8rem;
    color: #666;
    line-height: 1.4;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-bottom: 0.4rem;
  }

  .link-card-url {
    display: flex;
    align-items: center;
    margin-top: auto;
  }

  .link-card-domain {
    font-size: 0.7rem;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .link-card-image {
    width: 120px;
    flex-shrink: 0;
    overflow: hidden;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .link-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    margin: 0 !important;
    border-radius: 0 !important;
  }

  /* 内部リンクカード用の簡易スタイル */
  .link-card-internal .link-card-content {
    min-height: 70px;
  }

  @media (max-width: 640px) {
    .link-card {
      max-width: 100%;
    }

    .link-card-content {
      flex-direction: column;
    }

    .link-card-image {
      width: 100%;
      height: 160px;
      order: -1;
    }

    .link-card-text {
      padding: 10px;
    }

    .link-card-title {
      font-size: 0.85rem;
    }

    .link-card-description {
      font-size: 0.75rem;
    }
  }
</style>
