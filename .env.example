# Cloudflare R2 設定（OGP画像生成用）
# Cloudflareダッシュボード > R2 > バケット > 設定 から取得
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=ogp-images

# R2の公開URL（バケットのカスタムドメインまたはpub-xxx.r2.devのURL）
R2_PUBLIC_URL=https://pub-xxx.r2.dev
PUBLIC_R2_URL=https://pub-xxx.r2.dev

# OGP画像の全件再生成を強制する場合（デフォルト: false）
# FORCE_REGENERATE_OGP=true
